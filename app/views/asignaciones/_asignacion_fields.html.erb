<div class="nested-fields row border p-3 mb-3 rounded">

  <div class="col-md-6 mb-3">
    <%= f.label :servicio_id, "Servicio", class: "form-label" %>
    <%= f.collection_select :servicio_id, Servicio.all, :id, :nombre,
                            { include_blank: "Seleccione un servicio" },
                            class: "form-select servicio-select" %>
  </div>

  <div class="col-md-6 mb-3">
    <%= f.label :empleado_id, "Empleado", class: "form-label" %>
    <%= f.collection_select :empleado_id, [], :id, :nombre,
                            { include_blank: "Seleccione un servicio primero" },
                            class: "form-select empleado-select" %>
  </div>

  <div class="col-md-6 mb-3">
    <%= f.label :rol, "Rol", class: "form-label" %>
    <%= f.text_field :rol, class: "form-control" %>
  </div>

  <div class="col-md-6 mb-3">
    <%= f.label :estado, "Estado", class: "form-label" %>
    <%= f.select :estado, ["Planificada", "En Proceso", "Finalizada"],
                 { include_blank: "Seleccione un estado" },
                 class: "form-select" %>
  </div>

  <div class="col-12 mb-3">
    <%= f.label :tarea, "Tarea", class: "form-label" %>
    <%= f.text_area :tarea, rows: 2, class: "form-control" %>
  </div>

  <div class="col-12 text-end">
    <button type="button" class="btn btn-danger remove_fields">Eliminar</button>
  </div>

</div>
