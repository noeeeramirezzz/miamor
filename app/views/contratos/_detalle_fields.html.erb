<tr class="nested-fields">
  <td>
    <%= f.collection_select :servicio_id,
                            Servicio.all,
                            :id,
                            :nombre,
                            { prompt: "Seleccione" },
                            class: "form-select servicio-select",
                            data: { prices: Servicio.all.map { |s| [s.id, s.costo_base] }.to_h.to_json }
    %>

  </td>

  <td>
    <%= f.number_field :cantidad, class: "form-control cantidad-input", min: 1, value: 1 %>
  </td>

  <td>
    <%= f.number_field :precio_unitario, class: "form-control precio-input", step: 0.01 %>
  </td>

  <td>
    <%= f.number_field :subtotal, class: "form-control subtotal-input", readonly: true %>
  </td>

  <td>
    <%= f.text_field :notas, class: "form-control" %>
  </td>

  <td>
    <button class="btn btn-danger remove_fields" type="button">X</button>
  </td>
</tr>
